<p id="notice"><%= notice %></p>

<h1>Presupuestos</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Customer</th>
      <th scope="col">Title</th>
      <th scope="col">Description</th>
      <th scope="col">Start date</th>
      <th scope="col">End date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @budgets.each do |budget| %>
      <tr>
        <th scope="row"><%= budget.id %></th>
        <td><%= budget.customer.business_name %></td>
        <td><%= budget.title %></td>
        <td><%= budget.description %></td>
        <td><%= budget.start_date %></td>
        <td><%= budget.end_date %></td>
        <td><%= link_to "<i class=\"far fa-eye\"></i>".html_safe, budget, class: "btn btn-sm" %></td>
        <td><%= link_to "<i class=\"far fa-edit\"></i>".html_safe, edit_budget_path(budget), class: "btn btn-sm" %></td>
        <td><%= link_to "<i class=\"fas fa-trash\"></i>".html_safe, budget, method: :delete, data: { confirm: 'Â¿Esta seguro que desea eliminar este recurso?' }, class: "btn btn-sm alert-danger" -%>

        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<br>
<%= link_to "<i class=\"fas fa-plus\"></i> Nuevo presupuesto".html_safe, new_budget_path, class: "btn btn-primary btn-sm" %>
